<h2><%= @building.name %></h2>


<h3>Units In Building</h3>
<ul>
	<% @building.units.each do |unit| %>
		<li><%= link_to unit.unit_num, [@building,unit] %> </li>
	<% end %>
</ul>
<%= link_to "Add Unit", new_building_unit_path(@building) %>
<%= link_to "Edit Building", edit_building_path(@building) %>
<%= link_to "Delete Building", building_path(@building), :method => :delete,
		:confirm => "Are you sure you want to delete this building?" %>